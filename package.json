    "rebuild:browser": "theia rebuild:browser"
  },
  "devDependencies": {
    "lerna": "2.4.0"
  },
  "workspaces": [
    "hello-binary",
    "browser-app"
  ],
  "dependencies": {
    "nexe": "^3.0.0-beta.15"
  }
}
